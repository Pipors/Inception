	@echo "\033[92mâ•šâ•â•â•â•â•â•â•â•šâ•â•â•â•â•â•â–‘â•šâ•â•â•â•â•â•â–‘â–‘â–‘â•šâ•â•â–‘â–‘â–‘\033[0mâ•šâ•â•â–‘â–‘â–‘â–‘â–‘â•šâ•â•â•šâ•â•â•â•â•â•â•â•šâ•â•â•â•â•â•â–‘"
	@echo "\033[92m building...âŒ›\033[0m"

.PHONY: build up down
